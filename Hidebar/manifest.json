{
  "name": "Hidebar",
  "short_name": "Hidebar",
  "version": "1.2",
  "description": "Hide the Reddit sidebar when screen dimensions shrink.",
  "manifest_version": 2,
  "browser_action": {
    "name": "Hidebar",
    "icons": ["icon.png"],
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png" },
  "content_scripts": [ {
    "js": [ "jquery.min.js","content.js" ],
    "matches": [ "http://*.reddit.com/*", "https://*.reddit.com/*"]
  }]
}